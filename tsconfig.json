{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    // aqui eu estou dizendo que o meu layer existente, que ser√° importado no primeiro path, na verdade pode ser achado no segundo path 
    "paths": {
      "/opt/nodejs/productsLayer": [
        "lambda/products/layers/productsLayer/nodejs/productRepository"
      ],
      "/opt/nodejs/productsEventsLayer": [
        "lambda/products/layers/productsEventsLayer/nodejs/productsEvents"
      ],
      "/opt/nodejs/ordersLayer": [
        "lambda/orders/layers/ordersLayer/nodejs/ordersRepository"
      ],
      "/opt/nodejs/ordersApiLayer": [
        "lambda/orders/layers/ordersApiLayer/nodejs/ordersApi"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
